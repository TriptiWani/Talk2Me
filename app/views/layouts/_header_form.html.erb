<div id="header">
  <div class="col-xs-12">
      <div class="header_left col-xs-3 col-xs-offset-1">
        <%=  link_to (image_tag 't2m.png' ,:class => 'logo') , root_path %>
      </div>
      <div class="header_right col-xs-6 col-xs-offset-1">
        <div class="header_right_top">
          <p class="greetings">
            <% if @current_user.present? %>
                Hello <%= @current_user.name %>!
            <% else %>
              Welcome to Talk2Me!
            <% end %>
          </p>
        </div>
        <div class="header_right_bottom">
          <% if @current_user.present? %>
            <div class="btn-group" role="group" aria-label="...">
              <button type="button" class="btn btn-default">  <%= link_to  'My Groups' , groups_path %></button>
              <button type="button" class="btn btn-default">  <%= link_to  'New Group' , new_group_path %></button>
              <button type="button" class="btn btn-default">  <%= link_to  'Log Out' , login_path ,:method => 'delete'%></button>
            </div>
          <% else %>
            <div class="btn-group" role="group" aria-label="...">
              <button type="button" class="btn btn-default"><%= link_to 'Sign Up' ,new_user_path %></button>
              <button type="button" class="btn btn-default"><%= link_to 'Log In' ,login_path %></button>
            </div>
          <% end %>
        </div>
      </div>
  </div>
  <div id="flashnotice">
    <% if flash[:notice] %>
      <div class="success alert-success" role="success">
        <%#= flash[:notice] %>
      </div>
    <% end %>
    <% if flash[:alert] %>
      <div class="alert alert-danger product_details" role="alert">
        <%#= flash[:alert] %>
      </div>
    <% end %>
  </div>
</div>
